<resources>

    <style name="Theme.Vinkas.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Vinkas.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Vinkas.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/accent_light</item>
    </style>

    <style name="ThemeOverlay.Vinkas.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeOverlay.Vinkas.Light" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Vinkas.Light.DarkActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Vinkas.Dark" parent="TextAppearance.AppCompat.Inverse">
        <item name="android:textColorHintInverse">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

</resources>
